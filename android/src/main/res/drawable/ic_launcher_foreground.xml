<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White circle background - centered and sized to fit within safe zone -->
    <item
        android:left="14dp"
        android:top="14dp"
        android:right="14dp"
        android:bottom="14dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- Icon centered on the white circle, scaled to fit nicely -->
    <item
        android:drawable="@drawable/owndrive_icon"
        android:gravity="center"
        android:width="64dp"
        android:height="64dp" />
</layer-list>
